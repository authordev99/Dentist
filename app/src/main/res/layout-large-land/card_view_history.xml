<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_vertical_margin"
    android:layout_marginLeft="@dimen/card_view_horizontal_margin"
    android:layout_marginRight="@dimen/card_view_horizontal_margin"
    android:layout_marginTop="@dimen/card_view_vertical_margin"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/historyjadwal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">




                <TextView
                    android:id="@+id/tvNamaDokter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dokter"
                    android:layout_below="@+id/tvIDPasien"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="20dp"
                 />


                <TextView
                    android:id="@+id/tvStatusBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="51dp"

                    android:text="Selesai"
                    android:textSize="20dp"
                    android:textStyle="italic|bold" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="00.00"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="51dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tvStatusBar"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_time"
                    android:text="26 Juli 2017"
                    android:layout_marginRight="10dp"
                    android:layout_below="@id/tvStatusBar"

                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/tvIDPasien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="213123213"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22dp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvIDPasien"
                    android:layout_marginLeft="10dp"
                    android:text="Federico"
                    android:textSize="20dp" />


            </RelativeLayout>
        </LinearLayout>


</RelativeLayout>