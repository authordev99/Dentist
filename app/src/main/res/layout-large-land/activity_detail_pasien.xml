<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPasienActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:elevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="35dp"
                        android:src="@drawable/profle"
                       />

                    <TextView
                        android:id="@+id/tvID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:layout_toRightOf="@+id/ivProfile"
                        android:text="ID PASIEN"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvID"
                        android:layout_toRightOf="@+id/ivProfile"
                        android:gravity="center"
                        android:text="Nama"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/tvKeluhan"
                        android:layout_width="240dp"
                        android:layout_height="80dp"
                        android:layout_alignBottom="@+id/ivProfile"
                        android:layout_below="@+id/tvNama"
                        android:layout_toRightOf="@+id/ivProfile"
                        android:hint="Keluhan Pasien"
                        android:textSize="20dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvPasien"

                android:layout_marginTop="20dp"
                android:elevation="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="DATA JADWAL"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:text="Belum Terkonfirmasi"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:textStyle="italic" />


                    <ImageView
                        android:id="@+id/ivTanggal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/tvData"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_event_black_24dp" />

                    <TextView
                        android:id="@+id/tvTanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvJam"
                        android:layout_alignStart="@+id/tvJam"
                        android:layout_below="@+id/tvData"
                        android:padding="10dp"
                        android:text="Tanggal"
                        android:textSize="20dp" />

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvTanggal"
                        android:background="#9f9f9f"></View>

                    <ImageView
                        android:id="@+id/ivJam"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/v2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_schedule_black_24dp" />

                    <TextView
                        android:id="@+id/tvJam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTanggal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/ivJam"
                        android:padding="10dp"
                        android:text="Jam"
                        android:textSize="20dp" />

                    <View
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvJam"
                        android:background="#9f9f9f"></View>

                    <ImageView
                        android:id="@+id/ivDokter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/v3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_person_black_48dp" />

                    <TextView
                        android:id="@+id/tvNamaDokter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvJam"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/ivDokter"
                        android:padding="10dp"
                        android:text="Nama Dokter"
                        android:textSize="20dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="4dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLampiran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="DATA LAMPIRAN"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp" />

                        <RelativeLayout
                            android:id="@+id/rlLampiran1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="85dp">

                            <ImageView
                                android:id="@+id/ivLampiran"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />

                            <ProgressBar
                                android:id="@+id/pbLampiran1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlLampiran2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="85dp"
                            android:layout_toRightOf="@+id/rlLampiran1">

                            <ImageView
                                android:id="@+id/ivLampiran2"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />

                            <ProgressBar
                                android:id="@+id/pbLampiran2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rlLampiran2"
                          >

                        <Button
                            android:id="@+id/btnRekamMedis"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="30dp"
                            android:text="Rekam Medis"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/btnProfile"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/btnRekamMedis"
                            android:text="Profil Pasien"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

