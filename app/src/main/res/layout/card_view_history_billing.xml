<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <TextView
        android:id="@+id/tvIdInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:text="2018030001"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTanggal"
        android:layout_alignParentRight="true"
        android:text="Total Harga"
        android:textAllCaps="true"
        android:textSize="12dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/billing"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvIdInvoice"
        android:text="Tanggal"
        android:textSize="12dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalHarga" />

    <TextView
        android:id="@+id/tvNamaPasien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvIdInvoice"
        android:layout_toLeftOf="@+id/tvTanggal"
        android:layout_toRightOf="@+id/icon"
        android:layout_toStartOf="@+id/tvTanggal"
        android:text="Nama Pasien"

        android:textSize="13dp"

        app:layout_constraintLeft_toRightOf="@+id/icon"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvIDPasien"
        app:layout_constraintRight_toLeftOf="@+id/tvNamaDokter"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tvNamaDokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/icon"
        android:text="Nama Dokter"
        android:textSize="13dp"
        android:textStyle="italic|bold"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTanggal"
/>

    <TextView
        android:id="@+id/tvIDPasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaPasien"
        android:layout_toRightOf="@+id/icon"
        android:text="ID Pasien"
        android:textSize="13dp"
        android:textStyle="italic|bold"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvIdInvoice"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        android:layout_marginLeft="0dp" />


</android.support.constraint.ConstraintLayout>