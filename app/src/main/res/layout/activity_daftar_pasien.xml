<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DaftarPasienActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingRight="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"

            android:layout_marginTop="5dp"
            android:text="DATA PASIEN"
            android:textSize="25dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Pasien :"
                android:layout_marginTop="15dp"
                android:id="@+id/tvNoFile"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tvNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tvNoFile"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="DATA PASIEN"
            android:textSize="18dp"
            android:textStyle="bold" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etNama"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="25"
                android:maxLines="1"
                android:hint="Nama" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etTempatLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Tempat Lahir"
                android:inputType="text|textCapSentences"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:text="Tanggal Lahir"/>

        <Button
            android:id="@+id/btnDate"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="Pilih tanggal lahir . . ."
            android:textAllCaps="false" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:background="#595959"></View>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etNoKTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No. KTP"
                android:maxLength="16"
                android:inputType="number"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Jenis Kelamin"
            android:textSize="18dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/rgJenKel">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:id="@+id/rbLaki"
                android:text="Laki- Laki" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:id="@+id/rbPerempuan"
                android:text="Perempuan" />
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etSuku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:hint="Suku / Ras" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPekerjaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:hint="Pekerjaan" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etAlamatRumah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="textPostalAddress"
                android:hint="Alamat" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etTeleponRumah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:hint="Telepon Rumah" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etTeleponSelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:hint="Telepon Selular" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:id="@+id/spKategori"></Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:text="DATA MEDIK YANG PERLU DIPERHATIKAN"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Golongan Darah"
            android:textSize="18dp" />


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/rgGolDar">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:id="@+id/rbA"
                android:text="A" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:id="@+id/rbAB"
                android:text="AB" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:id="@+id/rbB"
                android:text="B" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:id="@+id/rbO"
                android:text="O" />
        </RadioGroup>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etTekananDarah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="Tekanan Darah" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvJantung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Penyakit Jantung" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rgJantung"
                android:layout_below="@+id/tvJantung"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/rbTidakJantung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:gravity="center"
                    android:text="Tidak Ada" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/rbAdaJantung"
                    android:text="Ada" />

            </RadioGroup>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/etJantung"

                android:maxLines="3"
                android:gravity="start"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:layout_toRightOf="@id/rgJantung"
                android:hint="keterangan"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDiabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Diabetes" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:id="@+id/rgDiabetes"
                android:layout_below="@+id/tvDiabetes"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/rbTidakDiabetes"
                    android:text="Tidak Ada" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/rbAdaDiabetes"
                    android:text="Ada" />

            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/etDiabetes"

                android:maxLines="3"
                android:gravity="start"
                android:padding="5dp"
                android:background="@drawable/edittext_background"
                android:layout_toRightOf="@id/rgDiabetes"
                android:hint="keterangan"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHaemopilia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Haemopilia" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/tvHaemopilia"
                android:id="@+id/rgHaemopilia"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/rbTidakHaemopilia"
                    android:text="Tidak Ada" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/rbAdaHaemopilia"
                    android:text="Ada" />

            </RadioGroup>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/etHaemopilia"

                android:maxLines="3"
                android:gravity="start"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:layout_toRightOf="@id/rgHaemopilia"
                android:hint="keterangan"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHepatitis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hepatitis" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/rgHepatitis"
                android:layout_below="@+id/tvHepatitis"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/rbTidakHepatitis"
                    android:text="Tidak Ada" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/rbAdaHepatitis"
                    android:text="Ada" />

            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/etHepatitis"

                android:maxLines="3"
                android:gravity="start"
                android:padding="5dp"
                android:background="@drawable/edittext_background"
                android:layout_toRightOf="@id/rgHepatitis"
                android:hint="keterangan"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvGastring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:text="Gastring" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/rgGastring"
                android:layout_below="@+id/tvGastring"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/rbTidakGastring"
                    android:text="Tidak Ada" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:id="@+id/rbAdaGastring"
                    android:text="Ada" />

            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/etGastring"

                android:maxLines="3"
                android:gravity="start"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_background"
                android:layout_toRightOf="@id/rgGastring"
                android:hint="keterangan"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPenyakitLain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Penyakit Lainnya" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/rgPenyakitLain"
                android:layout_below="@+id/tvPenyakitLain"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/rbTidakPenyakitLain"
                    android:text="Tidak Ada" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:id="@+id/rbAdaPenyakitLain"
                    android:text="Ada" />

            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/etPenyakitLain"

                android:maxLines="3"
                android:gravity="start"
                android:padding="5dp"
                android:background="@drawable/edittext_background"
                android:layout_toRightOf="@id/rgPenyakitLain"
                android:hint="keterangan"
                android:layout_marginBottom="10dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAlergi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="Alergi Terhadap Obat - Obatan" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/rgAlergi"
                android:layout_below="@+id/tvAlergi"
                android:orientation="horizontal">

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/rbTidakAlergiObat"
                    android:text="Tidak Ada" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:id="@+id/rbAdaAlergiObat"
                    android:text="Ada" />


            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/etAlergiObat"

                android:maxLines="3"
                android:gravity="start"
                android:padding="5dp"
                android:background="@drawable/edittext_background"
                android:layout_toRightOf="@id/rgAlergi"
                android:hint="keterangan"
                android:layout_marginBottom="10dp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAlergiMakanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Alergi Terhadap Makanan" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/rgAlergiMakanan"
                android:layout_below="@+id/tvAlergiMakanan"
                android:orientation="horizontal">

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbTidakAlergiMakanan"
                    android:checked="true"
                    android:text="Tidak Ada" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:id="@+id/rbAdaAlergiMakanan"
                    android:text="Ada" />


            </RadioGroup>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:id="@+id/etAlergiMakanan"

                android:maxLines="3"
                android:gravity="start"
                android:padding="5dp"
                android:background="@drawable/edittext_background"
                android:layout_toRightOf="@id/rgAlergiMakanan"
                android:hint="keterangan"
                android:layout_marginBottom="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_dataPengguna"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="85dp"
                android:text="DATA PENGGUNA"
                android:id="@+id/tvPengguna"
                android:textSize="18dp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etEmail"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etPassword"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password" />

            </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>
</ScrollView>



