<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"

   >



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoPasien"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="-3dp"
            android:background="@drawable/profle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="-6dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvNamaPasien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/photoPasien"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Nama Pasien"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@+id/photoPasien"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-4dp"
            app:layout_constraintRight_toLeftOf="@+id/tvUmur"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/tvUmur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvNamaPasien"
            android:layout_toLeftOf="@+id/ivMore"
            android:layout_toStartOf="@+id/ivMore"
            android:text="26 Apr 1996"
            android:textSize="10dp"
            app:layout_constraintRight_toLeftOf="@+id/ivMore"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvStatusUser" />

        <TextView
            android:id="@+id/tvStatusUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvNamaPasien"
            android:layout_alignBottom="@+id/tvNamaPasien"
            android:layout_toLeftOf="@+id/ivMore"
            android:layout_toStartOf="@+id/ivMore"
            android:text="Non Aktif"
            android:textAllCaps="true"
            android:textSize="10dp"
            app:layout_constraintRight_toLeftOf="@+id/ivMore"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNamaPasien"
            android:layout_toRightOf="@+id/photoPasien"
            android:text="ID Pasien"
            android:textSize="10dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNamaPasien"
            app:layout_constraintLeft_toRightOf="@+id/photoPasien"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tvKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAlamat"
            android:layout_toRightOf="@+id/photoPasien"
            android:text="kategori"
            android:textSize="9dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAlamat"
            app:layout_constraintLeft_toRightOf="@+id/photoPasien"
            android:layout_marginLeft="10dp" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_alignLeft="@+id/tvAlamat"-->
        <!--android:layout_alignStart="@+id/tvAlamat"-->
        <!--android:layout_below="@+id/tvAlamat"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:background="#cacaca"></View>-->

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginEnd="5dp"
            android:alpha="0.5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />




</android.support.constraint.ConstraintLayout>