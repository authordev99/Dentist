            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:layout_marginRight="20dp"-->

            <!--android:layout_marginBottom="20dp"-->
            <!--android:id="@+id/btnSignGoogle">-->

            <!--</com.google.android.gms.common.SignInButton>-->


            <!--<Button-->
