<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlack"
        android:padding="20dp"></View>

    <RelativeLayout
        android:id="@+id/rlDariTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/dariTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dari Tanggal"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvDariTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dariTanggal"
            android:text="Semua"
            android:textSize="13dp" />


    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7"
        android:padding="20dp"></View>

    <RelativeLayout
        android:id="@+id/rlKeTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/keTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ke Tanggal"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvKeTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keTanggal"
            android:text="Semua"
            android:textSize="13dp" />


    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7c7c7"
        android:padding="20dp"></View>


</LinearLayout>